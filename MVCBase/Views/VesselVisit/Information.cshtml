@using MVCBase.Models.Documents
@using MVCBase.Models.VesselVisit
@model MVCBase.Models.VesselVisit.VesselVisitModel

@{
    ViewBag.Title = "Information";
}


<link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
<script src="/Scripts/jquery.responsiveiframe.js"></script>
@Html.HiddenFor(modelItem => Model.Phase)
<div id="carousel-example-generic" class="carousel slide" data-ride="">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">

            <img src="~/carousel/PokeBalls.jpg" class="container" alt="...">
            <div class="carousel-caption">
                <h3>Caption Text</h3>
            </div>
        </div>
        <div class="item ">
            <img src="~/carousel/Portuaria.jpg" class="container" alt="...">
            <div class="carousel-caption">
                <h3>Caption Text</h3>
            </div>
        </div>
        <div class="item">
            <img src="~/carousel/PokemonFut.jpg" class="container" alt="...">
            <div class="carousel-caption">
                <h3>Caption Text</h3>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>
<div class="w3-container w3-red ">
    <h2>Name of Vessel : @Html.DisplayFor(modelItem => Model.VesselName)</h2>
  
    <h4> Phase :<div data-role="remove" class="tag label label-info  "> @Html.DisplayFor(modelItem => Model.Phase)</div></h4>

</div>


<!-- widget options:
usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

data-widget-colorbutton="false"
data-widget-editbutton="false"
data-widget-togglebutton="false"
data-widget-deletebutton="false"
data-widget-fullscreenbutton="false"
data-widget-custombutton="false"
data-widget-collapsed="true"
data-widget-sortable="false"

-->
<div class="jarviswidget jarviswidget-sortable jarviswidget-color-greenLight" id="wid-id-0" role="widget" style="" data-widget-attstyle="jarviswidget-color-greenLight">
    <header role="heading">
        <div class="jarviswidget-ctrls" role="menu">
            <a href="#" class="button-icon jarviswidget-toggle-btn" rel="tooltip" title="" data-placement="bottom" data-original-title="Collapse"><i class="fa fa-minus "></i></a>

        </div>
        <h4><strong>Information: </strong> <i>Vessel Visit</i></h4>

        <span class="jarviswidget-loader" style="display: none;"><i class="fa fa-refresh fa-spin"></i></span>
    </header>

    <!-- widget div-->
 

        <!-- widget edit box -->
        <div class="jarviswidget-editbox" style="display: none;">
            <!-- This area used as dropdown edit box -->
            <input class="form-control" type="text">
            <span class="note"><i class="fa fa-check text-success"></i> Change title to update and save instantly!</span>

        </div>
        <!-- end widget edit box -->
        <!-- widget content -->

        <div class="widget-body">

            <div class="container ">


                <br />
                <div id="modal-container" role="img" class="modal affix"  >
                    <div class="modal-dialog">
                        <div class="modal-content"></div>
                    </div>

                </div>




                <div class="panel-group smart-accordion-default" id="accordion-2">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4> <a data-toggle="collapse" data-parent="#accordion-2" href="#collapseOne-1" aria-expanded="false" class="collapsed"> <i class="fa fa-fw fa-plus-circle txt-color-green"></i>  Fechas </a></h4>
                        </div>
                        <div id="collapseOne-1" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <h3>Ata</h3>
                                        <p> @Html.DisplayFor(modelItem => Model.Ata) </p>
                                        @Html.HiddenFor(modelItem => Model.Ata)
                                    </div>
                                    <div class="col-lg-6
                             ">
                                        <h3>Atd</h3>
                                        <p> @Html.DisplayFor(modelItem => Model.Atd) </p>
                                        @Html.HiddenFor(modelItem => Model.Atd)
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <h3>Eta</h3>
                                        @Html.DisplayFor(modelItem => Model.Eta)
                                        @Html.HiddenFor(modelItem => Model.Eta)
                                    </div>
                                    <div class="col-lg-6">
                                        <h3>Etd</h3>
                                        <p> @Html.DisplayFor(modelItem => Model.Etd) </p>
                                        @Html.HiddenFor(modelItem => Model.Etd)
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-group smart-accordion-default" id="accordion-1">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4> <a data-toggle="collapse" data-parent="#accordion-1" href="#collapseOne-2" aria-expanded="false" class="collapsed"> <i class="fa fa-fw fa-plus-circle txt-color-green"></i>  Documentos </a></h4>
                            </div>
                            <div id="collapseOne-2" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                                <div class="panel-body">
                                    @using (Html.BeginForm("SaveDocuments", "VesselVisit", FormMethod.Post, new
                                    { enctype = "multipart/form-data" }))
                                    {
                                        @Html.HiddenFor(modelItem => Model.Id)

                                        <input id="File" name="File" multiple="" type="file" value="">

                                        @Html.ValidationMessageFor(m => m.File)
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="SaveDocuments" class="btn btn-default alig" />
                                            </div>
                                        </div>
                                    }
                                    @{
                                        Html.RenderAction("Index", "Documents");
                                    }
                                </div>
                            </div>
                        </div>


                    </div>







                </div>

                <!-- end widget content -->

            </div>
            <!-- end widget div -->

        </div>




    </div>

